{
	"image": "mcr.microsoft.com/devcontainers/go:1.22",
	"features": {
		"ghcr.io/devcontainers/features/sshd:1": {},
                "ghcr.io/devcontainers/features/github-cli:1": {
        	        "installDirectlyFromGitHubRelease": false
		}
	},
	"remoteUser": "vscode",
	"runArgs": [
		"--cap-add=SYS_PTRACE",
		"--security-opt",
		"seccomp=unconfined"
	]
}
